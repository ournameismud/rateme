{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("ournameismud\\rateme\\assetbundles\\rateme\\RateMeAsset") %}
{% do view.registerAssetBundle("ournameismud\\rateme\\assetbundles\\indexcpsection\\IndexCPSectionAsset") %}

{% set docsUrl = "https://github.com/ournameismud/rate-me/blob/master/README.md" %}

{% set title = "Rate Me" %}

{% set pluginCpUrl = url('rate-me') %}

{% set iconUrl = view.getAssetManager().getPublishedUrl('@ournameismud/rateme/assetbundles/indexcpsection/dist', true) ~ '/img/Index-icon.svg' %}

{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('rate-me') }}</a>
    </div>
{% endset %}

{% set content %}
    <h2>{{ "Index CP Section body goes here"|t('rate-me') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
